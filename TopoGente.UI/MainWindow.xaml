<Window x:Class="TopoGente.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="TopoGente - Processamento Topográfico" Height="650" Width="950"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <GroupBox Header="Dados da Estação de Partida (M1)" Grid.Row="0" Padding="10" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="5">
                    <TextBlock Text="Coordenada E (X):"/>
                    <TextBox x:Name="txtX" Text="1000,000" Padding="3"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="5">
                    <TextBlock Text="Coordenada N (Y):"/>
                    <TextBox x:Name="txtY" Text="1000,000" Padding="3"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Margin="5">
                    <TextBlock Text="Cota (Z):"/>
                    <TextBox x:Name="txtZ" Text="100,000" Padding="3"/>
                </StackPanel>

                <StackPanel Grid.Column="3" Margin="5">
                    <TextBlock Text="Azimute de Partida (Graus):"/>
                    <TextBox x:Name="txtAzimute" Text="0" Padding="3" ToolTip="Informe em Graus Decimais"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10" Background="#F0F0F0">

            <TextBlock Text="PROJETO:" VerticalAlignment="Center" FontWeight="Bold" Margin="5,0"/>
            <Button x:Name="btnSalvarProjeto" Content="💾 Salvar (.topo)" 
                    Width="100" Height="25" Click="btnSalvarProjeto_Click" Margin="5,0"/>
            <Button x:Name="btnAbrirProjeto" Content="📂 Abrir (.topo)" 
                    Width="100" Height="25" Click="btnAbrirProjeto_Click" Margin="5,0"/>

            <Rectangle Width="1" Height="20" Fill="Gray" Margin="10,0"/>

            <TextBlock Text="Formato : " VerticalAlignment="Center" Margin="5,0"/>
            <ComboBox x:Name="cmbFormatoArquivo" Width="160" Height="25" Margin="5,0" SelectedIndex="0">
                <ComboBoxItem Content=" Csv/txt"/>
                <ComboBoxItem Content="Fbk"/>
                <ComboBoxItem Content="LandXML"/>
            </ComboBox>
            <Button x:Name="btnCarregarArquivo" Content="📄 Importar Caderneta" 
                    Width="130" Height="25" Click="btnCarregarArquivo_Click" FontWeight="SemiBold" Margin="5,0"/>

            <Button x:Name="btnProcessar" Content="⚙️ CALCULAR" 
                    Width="120" Height="25" Click="btnProcessar_Click" IsEnabled="False" FontWeight="Bold" Background="#DDFFDD"/>
            
            <Button x:Name="btnExportarDxf" Content="Exportar DXF" 
                Width="120" Height="25" Click="btnExportarDxf_Click" 
                IsEnabled="False" FontWeight="Bold" Margin="10,0,0,0" Background="#E0F7FA"/>

            <TextBlock x:Name="lblArquivo" Text="Nenhum arquivo" 
                       VerticalAlignment="Center" Margin="10,0" FontStyle="Italic" Foreground="Gray" FontSize="10"/>
        </StackPanel>

        <TabControl x:Name="tabsPrincipal" Grid.Row="2" Margin="0,0,0,5">

            <TabItem Header=" 📝 Caderneta (Por Estação) " FontSize="14">
                <Grid Background="#FCFCFC">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
                        <TextBlock Text="Selecione a Estação:" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,10,0"/>

                        <ComboBox x:Name="cmbEstacoes" Width="300" 
                                  DisplayMemberPath="Nome" 
                                  SelectionChanged="cmbEstacoes_SelectionChanged"/>

                        <TextBlock x:Name="txtInfoEstacao" Text="Hi: -" VerticalAlignment="Center" Margin="15,0" Foreground="Gray"/>
                    </StackPanel>

                    <DataGrid x:Name="gridCaderneta" Grid.Row="1" AutoGenerateColumns="False" 
                              CanUserAddRows="False" Margin="5" BorderThickness="1" BorderBrush="#DDD">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Ponto Visado" Binding="{Binding PontoVisado}" Width="100" FontWeight="Bold"/>
                            <DataGridTextColumn Header="Ang. Horiz." Binding="{Binding AnguloHorizontal, StringFormat=F4}" Width="90"/>
                            <DataGridTextColumn Header="Ang. Vert." Binding="{Binding AnguloVertical, StringFormat=F4}" Width="90"/>
                            <DataGridTextColumn Header="Dist. Inc." Binding="{Binding DistanciaInclinada, StringFormat=F3}" Width="80"/>
                            <DataGridTextColumn Header="HS (Prisma)" Binding="{Binding AlturaPrisma, StringFormat=F3}" Width="80"/>
                            <DataGridTextColumn Header="Descrição" Binding="{Binding Observacao}" Width="150"/>

                            <DataGridComboBoxColumn Header="Tipo" 
                                                    SelectedItemBinding="{Binding Tipo}"
                                                    Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem Header=" 📍 Coordenadas Calculadas " FontSize="14">
                <Grid Background="White">
                    <DataGrid x:Name="gridResultados" AutoGenerateColumns="False" 
                              CanUserAddRows="False" IsReadOnly="True" Margin="5" BorderThickness="0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Ponto" Binding="{Binding Nome}" Width="80" FontWeight="Bold"/>
                            <DataGridTextColumn Header="Este (X)" Binding="{Binding X, StringFormat=F3}" Width="*"/>
                            <DataGridTextColumn Header="Norte (Y)" Binding="{Binding Y, StringFormat=F3}" Width="*"/>
                            <DataGridTextColumn Header="Cota (Z)" Binding="{Binding Z, StringFormat=F3}" Width="*"/>
                            <DataGridTextColumn Header="Descrição" Binding="{Binding TipoDescricao}" Width="150"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem Header=" 🗺️ Visualização Gráfica " FontSize="14">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#EEE" Margin="0,0,0,5">
                        <TextBlock Text="Controles: Roda do Mouse (Zoom) | Clique e Arraste (Mover)" 
                                   VerticalAlignment="Center" Foreground="Gray" Margin="10,5,20,5" FontSize="11"/>

                        <Button Content="Recentralizar Poligonal" Click="bntResetZoom_Click" Padding="5,2" Margin="0,2,10,2"/>

                        <CheckBox x:Name="chkMostrarNomes" Content="Mostrar Nomes" 
                                  VerticalAlignment="Center" IsChecked="True"
                                  Checked="chkMostrarNomes_Changed" Unchecked="chkMostrarNomes_Changed"/>
                    </StackPanel>

                    <Border Grid.Row="1" BorderBrush="#CCC" BorderThickness="1" Margin="5" Background="#FAFAFA" ClipToBounds="True"
                            MouseWheel="Canvas_MouseWheel"
                            MouseDown="Canvas_MouseDown"
                            MouseUp="Canvas_MouseUp"
                            MouseMove="Canvas_MouseMove">

                        <Canvas x:Name="canvasDesenho" Background="Transparent">
                            <Canvas.RenderTransform>
                                <MatrixTransform x:Name="transformacaoCanvas"/>
                            </Canvas.RenderTransform>
                        </Canvas>
                    </Border>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                        <Rectangle Width="15" Height="15" Fill="Blue" Margin="0,0,5,0"/>
                        <TextBlock Text="Estações (Poligonal)" VerticalAlignment="Center" Margin="0,0,15,0"/>
                        <Rectangle Width="15" Height="15" Fill="Green" Margin="0,0,5,0"/>
                        <TextBlock Text="Irradiações" VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </TabItem>

        </TabControl>

        <Border Grid.Row="3" Background="#F5F5F5" Padding="5" CornerRadius="0" BorderBrush="#DDDDDD" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Perímetro: " FontWeight="Bold" Foreground="#333" FontSize="11"/>
                    <TextBlock x:Name="txtPerimetro" Text="-" Margin="0,0,15,0" FontSize="11"/>

                    <TextBlock Text="Erro Linear: " FontWeight="Bold" Foreground="#333" FontSize="11"/>
                    <TextBlock x:Name="txtErro" Text="-" Margin="0,0,15,0" Foreground="Red" FontWeight="DemiBold" FontSize="11"/>

                    <TextBlock Text="Precisão: " FontWeight="Bold" Foreground="#333" FontSize="11"/>
                    <TextBlock x:Name="txtPrecisao" Text="-" Foreground="Blue" FontSize="11"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,5,0">
                    <TextBlock Text="topoGENTE" FontWeight="Bold" Foreground="Gray" FontSize="10"/>
                    <TextBlock Text=" - " Foreground="Gray" FontSize="10"/>
                    <TextBlock Text="Gabriel.f.viana@ufv.br" Foreground="Gray" FontStyle="Italic" FontSize="10"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>